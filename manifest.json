{
    "name": "Youtube Timestamp",
    "description": "Save youtube videos with exact timestamps for later.",
    "version": "1.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "./src/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./images/icon.png",
            "32": "./images/icon.png",
            "38": "./images/icon.png",
            "128": "./images/icon.png"
        }
    },
    "icons": {
        "16": "./images/icon.png",
        "32": "./images/icon.png",
        "38": "./images/icon.png",
        "128": "./images/icon.png"
    },
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://www.youtube.com/*",
        "https://www.youtube.com/*"
    ]
}