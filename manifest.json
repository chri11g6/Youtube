{
    "name": "Youtube Timestamps",
    "description": "Save your youtube timestamps",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./src/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./images/icon.png",
            "32": "./images/icon.png",
            "38": "./images/icon.png",
            "128": "./images/icon.png"
        }
    },
    "icons": {
        "16": "./images/icon.png",
        "32": "./images/icon.png",
        "38": "./images/icon.png",
        "128": "./images/icon.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://www.youtube.com/*",
        "https://www.youtube.com/*",
        "https://i.ytimg.com/*"
    ]
}